datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING") // Used for migrations
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String       @id @default(cuid())
  username      String       @unique
  displayName   String?
  bio           String?
  email         String       @unique
  emailVerified DateTime?
  image         String?
  password      String?
  links         Link[]
  socialLinks   SocialLink[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model Link {
  id          String    @id @default(cuid())
  type        String    @default("link") // "link", "image", "map", "header"
  title       String
  url         String?   // Optional now since headers don't need URLs
  image       String?   // For image links
  description String?   // For additional context
  mapLocation Json?     // For storing map coordinates and info
  order       Int       @default(0)
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
}

model SocialLink {
  id        String   @id @default(cuid())
  platform  String
  url       String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
} 